@model TestApp.WEB.Models.Product.ShowProductsViewModel

<h1>Products</h1>
<a asp-route="defaultCreateProductGet" class="btn btn-primary mt-3 mb-3">Add new</a>
<div class="container">
    <div class="row">
        @if (Model.Products.Count > 0)
        {
            foreach (var item in Model.Products)
            {


        <div class="card ml-2 mr-2 mt-2 mb-2" style="width: 18rem;">
            <img class="card-img-top" src="~/Images/hollywood.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Price $</h6>
                <p class="card-text">@item.Description</p>
                <a asp-route="defaultGetProduct" asp-route-productId="@item.Id" class="btn btn-primary">Check this</a>
            </div>
        </div>
            }
        }
        else
        {
        <h2>Empty set</h2>
        }
    </div>
</div>