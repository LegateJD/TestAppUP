@model TestApp.WEB.Models.Product.EditProductViewModel

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h1>Edit product</h1>
            @Html.ValidationSummary()
            <form asp-route="defaultEditProductPost" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="Name" value="@Model.Name" id="name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="Description" id="description" class="form-control">@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="text" name="Price" value="@Model.Price" id="price" min="0" step="0.01" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary">Edit</button>
                </div>
            </form>
            <form asp-route="defaultRemoveProductPost" method="post">
                <input type="hidden" name="ProductId" id="productid" value="@Model.Id" />
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>