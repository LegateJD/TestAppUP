@model TestApp.WEB.Models.Orders.OrderViewModel

<table class="table" id="basket-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.OrderDetails != null)
        {
            foreach (var item in Model.OrderDetails)
            {
<tr>
    <th>@item.Product.Name</th>
    <td>@(item.Product.Price*item.Quantity) $</td>
    <td>@item.Quantity</td>
    <td><button class="btn btn-danger" data-product-id="@item.Product.Id">Delete</button></td>
</tr>}
            }
    </tbody>
</table>
@if (Model.OrderDetails != null)
{
<h2>Total: @Model.OrderDetails.Select(c => c.Product.Price * c.Quantity).Sum() $</h2>}

@if (Model.OrderDetails != null && Model.OrderDetails.Any())
{
<a asp-route="defaultMakeOrder" class="btn btn-primary">Checkout</a>}